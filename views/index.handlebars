<div id="main">watch list</div>

{{!-- LOG IN OR SIGN UP MODALS --}}

<button class="trigger" id="logbtn">Log In</button>
<div class="modal">
    <div class="modal-content">
        <span class="close-button">&times;</span>
        <h1>Hello, I am a log-in modal!</h1>
    </div>
</div>

<button class="trigger" id="signbtn">Sign Up</button>
<div class="modal">
    <div class="modal-content">
        <span class="close-button">&times;</span>
        <h1>Hello, I am a sign-up modal!</h1>
    </div>
</div>

<div class="container">
    <div class="row">
        {{!-- WATCHLIST --}}
        <div>
            <div id="to-watch">UP NEXT</div>
            <div class="watchlist">
                {{#each show_data}}
                {{#unless this.watched}}
                {{/unless}}
                {{/each}}
            </div>

        </div>
        <div class="col-md-6 text-center" class="task">
            <div class="row">
                {{#each show_data}}
                {{#unless this.watched}}
                <div class="col-md-9 text-center">
                    <pre>
                        {{!-- {{this.id}}.  --}}
                        {{this.name}}
					</pre>
                    <!-- {{this.Date}} -->
                </div>
                <div class="col-md-3 text-center">
                    <form class="watchedForm button-size">
                        <input input type="hidden" class="mediaID" type="text" value={{this.id}}>
                        <button type="submit" class="btn btn-outline-danger btn-sm">Watched?</button>
                    </form>
                </div>
                {{/unless}}
                {{/each}}
            </div>
        </div>
        <div class="col-md-6 text-center" class="task">
            {{#each show_data}}
            {{#if this.watched}}
            <input class="form-control" type="text" placeholder="{{this.id}} . {{this.name}}" readonly>
            {{/if}}
            {{/each}}
        </div>
    </div>
</div>

