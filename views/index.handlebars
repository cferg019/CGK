<div id="main">watch list</div>

{{!-- LOG IN OR SIGN UP MODALS --}}

<button class="trigger" id="logbtn">Log In</button>
<div class="modal">
    <div class="modal-content">
        <span class="close-button">&times;</span>
        <h1>Hello, I am a log-in modal!</h1>
    </div>
</div>

<button class="trigger" id="signbtn">Sign Up</button>
<div class="modal">
    <div class="modal-content">
        <span class="close-button">&times;</span>
        <h1>Hello, I am a sign-up modal!</h1>
    </div>
</div>

{{!-- CONTAINERS FOR WATCHLIST & HAVE WATCHED LIST --}}

{{!-- WATCHLIST --}}
<div>
    <div id="to-watch">UP NEXT</div>
    <div class="watchlist">
        {{#each show_data}}
            {{#unless this.watched}}
            {{/unless}}
        {{/each}}
    </div>

</div>


<div id="form-container">
    <form method="POST">
        <input type="text">Title
        <input type="radio" name="media-type" value="movie"> Movie
        <input type="radio" name="media-type" value="tv"> TV Show
        <select name="genre">
            <option value="action">Action</option>
            <option value="animated">Animated</option>
            <option value="comedy">Comedy</option>
            <option value="documentary">Documentary</option>
            <option value="drama">Drama</option>
            <option value="horror">Horror</option>
            <option value="romantic">Romantic</option>
            <option value="sci-fi">Sci-Fi</option>
            <option value="thriller">Thriller</option>
        </select>

        <input type="submit" value="Submit">Submit
    </form>
</div>