{{!-- LOG IN OR SIGN UP MODALS --}}
<div id="modal-wrapper">

    {{!-- LOG IN MODAL --}}
    <button class="trigger" id="logbtn">Log In</button>
    <div class="my-modal" id="loginmodal">
        <div class="modal-content">
            <span class="close-button" id="closeButtonLogIn">&times;</span>

            {{!-- INSIDE MODAL --}}
            <div class="container">
                <h2 id="log-title">Log In</h2>
                <form id="login-info">
                    <div class="form-group has-feedback">
                        <div class="row input-row">
                            <span class="fas fa-envelope fa-2x col-3" id="email-icon"></span>
                            <input type="email" class="form-control col-9" id="login-email-input"
                                aria-describedby="emailHelp" placeholder="Email">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row input-row">
                            <span class="fas fa-key fa-2x col-3" id="password-icon"></span>
                            <input type="password" class="form-control col-9" id="login-password-input"
                                aria-describedby="emailHelp" placeholder="Password">
                        </div>
                    </div>
                    <div style="display: none" id="alert" class="alert alert-danger" role="alert">
                        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                        <span class="sr-only">Error:</span> <span class="msg"></span>
                    </div>
                    <button type="submit" class="modal-btns">Login</button>
                </form>
            </div>
        </div>
    </div>

